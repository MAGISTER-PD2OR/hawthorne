- load i18n

.row.pure-g
  input.uuid.hidden(type='hidden', value=data.id)
  .column.icon.username.pure-u-7-24
    i(data-feather='tag')
    span= data.name
  .column.icon.username.pure-u-7-24
    i(data-feather='users')
    span {% blocktrans with user_count=data.user_set.all.count %}{{user_count}} user{{user_count|pluralize}}{% endblocktrans %}
  .column.icon.username.pure-u-7-24
    i(data-feather='zap')
    span {% blocktrans with permission_percentage=data.perms %}{{permission_percentage}}% granted{% endblocktrans %}
  .column.icon.pure-u-3-24
    .spacer

    - if perms.auth.change_group
      .action
        i(data-feather="edit-2", onclick="window.api.edit('setting__group', this)")

    - if perms.auth.delete_group
      .action
        i(data-feather="trash-2", onclick="window.api.remove('setting__group', this)")

  - if perms.core.change_group
    .column.icon.switch.pure-u-3-24.animated.collapsed(onclick="window.style.settings.permissions(this)", style="align-items:flex-start")
        i(data-feather='toggle-left')
        span Simple
    .column.icon.perms.pure-u-18-24.flex.center.special.animated.collapsed
      - include 'partials/setting/permission.pug' with advanced=data.executed.advanced simple=data.executed.base checked=data.executed.used suffix=data.id
    .column.icon.pure-u-3-24.animated.collapsed
