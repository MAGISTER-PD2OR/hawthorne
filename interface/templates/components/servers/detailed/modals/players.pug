- load i18n
- load static
- load utils

for item in data
  tr
    td(style="width:1px;height:30px")
      if item.country
        - with "flags/"|add:item.country.code|add:".svg" as url
          img.country(src='{% static url %}')
    td
      a(href='javascript:void(0)', onclick="window.vc('players[detailed]', '{{item.user.id}}')")
        = item.namespace
    td= item|userconnection|duration
    td
      form(data-trigger='[modal/form]', data-action='misc', data-mode='servers[detailed][kick]')
        input.hidden.target(value='{{server.id}}')
        input.hidden(name='message', value='You have been kicked')
        input.hidden(name='kick', type='checkbox', data-boolean)
        input.hidden(name='clients', value='{{item.id}}', data-list)
        button.unset(title='Kick', type='submit')
          i.icon.ion-ios-log-out
      button.unset(title="Message", data-trigger="[modal/open]", data-trigger-target="[modal/players/message]", data-trigger-overrides='clients={{item.id}}')
        i.icon.ion-ios-text
